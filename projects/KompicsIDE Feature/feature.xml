      see license.txt
   </license>

   <url>
      <update label="KompicsIDE Update" url="http://cloud1.sics.se"/>
   </url>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jdt.core" version="3.8.1" match="greaterOrEqual"/>
      <import plugin="org.eclipse.core.resources" version="3.8.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui.views" version="3.6.100" match="greaterOrEqual"/>
      <import plugin="org.eclipse.emf.ecore" version="2.8.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.jdt.ui" version="3.8.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.gef" version="3.8.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui.workbench.texteditor" version="3.8.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="KompicsIDE"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="KompicsMetaModel"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
